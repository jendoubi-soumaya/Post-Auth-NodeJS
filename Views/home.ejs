<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD</title>
    <link rel="stylesheet" href="/css/semantic.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <div class="wrapper">

        <div class="ui menu">
            <div class="ui container"> 

                <div class="header item">
                    <a href="/" class="link">Home</a>
                    </div>
                  <a class="item">
                    Contact
                  </a>
                  <a class="item">
                    About
                  </a>
                </div>

            </div>

           <br>
           <br>
           <br> 
           <div class="ui container">
            <form action="/add" class="ui form" method="post">
                <div class="ui three fields">
                    <div class="field">
                        <label for="Title" class="ui header green">enter the post title</label>
                        <input type="text" name="Title" id="Title">
                    </div>
                    <div class="field">
                        <label for="Content" class="ui header green">enter the post content</label>
                        <input type="text" name="Content" id="Content">
                    </div>
                </div>
                <div class="ui fluid field">
                    <input type="submit" value="submit" class="ui button green fluid">
                </div>
            </form>
            <br><br>

            <table class="ui green table">
                <thead>
                    <th>Post Title</th>
                    <th>Post Content</th>
                    <th>Update</th>
                    <th>Delete</th>
                </thead>
                <tbody>
                <% posts.forEach((post)=>{ %>
                <tr>
                    <td><%- post.Title%></td>
                    <td><%- post.Content%></td>
                    <td><a class="ui purple button" href="/edit/<%= post._id %>"><i class="edit outline icon"></i></a></td>
                    <td><a class="ui red button" href="/delete/<%= post._id %>"><i class="minus icon"></i></a></td>
                </tr>
                <% }); %>
                
                </tbody>

            </table>
           </div>
    
    </div>
    
</body>
</html>